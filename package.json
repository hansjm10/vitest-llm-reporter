{
  "name": "vitest-llm-reporter",
  "version": "0.2.2",
  "type": "module",
  "description": "A Vitest reporter optimized for LLM parsing with structured, concise output",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:demo": "LLM_REPORTER_DEMO=1 vitest run",
    "test:ui": "vitest --ui",
    "test:bench": "vitest -c vitest.bench.config.ts run tests/benchmarks",
    "bench": "npm run test:bench",
    "bench:reporter": "vitest -c vitest.bench.config.ts run tests/benchmarks/reporter.bench.ts",
    "bench:large-suites": "vitest -c vitest.bench.config.ts run tests/benchmarks/large-suites.bench.ts",
    "bench:all": "npm run bench:reporter && npm run bench:large-suites",
    "coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "ci": "npm run lint && npm run type-check && npm run test && npm run coverage && npm run build",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "vitest",
    "reporter",
    "llm",
    "ai",
    "testing",
    "structured-output"
  ],
  "author": "Jordan Hans",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hansjm10/vitest-llm-reporter.git"
  },
  "bugs": {
    "url": "https://github.com/hansjm10/vitest-llm-reporter/issues"
  },
  "homepage": "https://github.com/hansjm10/vitest-llm-reporter#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/debug": "^4.1.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vitest": "^0.5.4",
    "js-yaml": "^4.1.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "vitest-llm-reporter": "^0.2.0"
  },
  "dependencies": {
    "debug": "^4.4.1"
  }
}
