{
  "description": "GitHub Repository Settings Contract",
  "contract": {
    "branch_protection": {
      "main": {
        "required_status_checks": {
          "strict": true,
          "contexts": [
            "test (17, ubuntu-latest)",
            "test (18, ubuntu-latest)",
            "test (20, ubuntu-latest)",
            "test (22, ubuntu-latest)",
            "lint",
            "type-check",
            "build",
            "coverage"
          ]
        },
        "enforce_admins": false,
        "required_pull_request_reviews": {
          "dismiss_stale_reviews": true,
          "require_code_owner_reviews": false,
          "required_approving_review_count": 1
        },
        "restrictions": null,
        "allow_force_pushes": false,
        "allow_deletions": false,
        "required_conversation_resolution": true
      }
    },
    "secrets": {
      "required": [
        {
          "name": "NPM_TOKEN",
          "description": "NPM automation token for publishing",
          "type": "repository_secret",
          "environment": null
        }
      ],
      "optional": [
        {
          "name": "CODECOV_TOKEN",
          "description": "Token for Codecov integration",
          "type": "repository_secret",
          "environment": null
        }
      ]
    },
    "environments": {
      "npm-production": {
        "protection_rules": {
          "required_reviewers": [],
          "wait_timer": 0,
          "prevent_self_review": true,
          "deployment_branch_policy": {
            "protected_branches": true,
            "custom_branch_policies": false
          }
        }
      }
    },
    "settings": {
      "has_issues": true,
      "has_projects": false,
      "has_wiki": false,
      "has_downloads": true,
      "allow_squash_merge": true,
      "allow_merge_commit": true,
      "allow_rebase_merge": true,
      "delete_branch_on_merge": true,
      "allow_auto_merge": false,
      "allow_update_branch": true
    },
    "webhook_events": [
      "pull_request",
      "push",
      "release",
      "workflow_run"
    ]
  }
}